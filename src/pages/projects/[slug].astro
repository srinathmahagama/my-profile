---
import Layout from "../../layouts/Layout.astro";
import { projects, getAllProjectSlugs } from "../../data/projectData";

export async function getStaticPaths() {
    return getAllProjectSlugs().map((slug) => ({
        params: { slug },
    }));
}

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) {
    return Astro.redirect("/404");
}

const allTechnologies = [
    ...(project.technologies.frontend || []),
    ...(project.technologies.backend || []),
    ...(project.technologies.mobile || []),
    ...(project.technologies.database || []),
    ...(project.technologies.devops || []),
    ...(project.technologies.other || []),
];
---

<Layout title={`${project.title} | Srinath Mahagama`}>
    <!-- Hero Section -->
    <section class="container py-16">
        <a
            href="/projects"
            class="inline-flex items-center gap-2 text-[var(--color-primary)] hover:text-[var(--color-secondary)] transition-colors mb-8"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
            </svg>
            Back to Projects
        </a>

        <h1 class="text-5xl md:text-6xl mb-6">
            {project.title}
        </h1>

        <p class="text-xl text-[var(--color-text-muted)] mb-8 max-w-[800px]">
            {project.fullDescription}
        </p>

        {
            project.images.hero && (
                <div class="mb-12 rounded-2xl overflow-hidden border border-[var(--color-border)] shadow-2xl">
                    <img
                        src={project.images.hero}
                        alt={`${project.title} Hero Image`}
                        class="w-full h-auto object-cover"
                    />
                </div>
            )
        }

        <div class="flex flex-wrap gap-4 mb-8">
            {
                project.links.github && (
                    <a
                        href={project.links.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-outline inline-flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                        </svg>
                        View Code
                    </a>
                )
            }
            {
                project.links.live && (
                    <a
                        href={project.links.live}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-primary inline-flex items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-5 h-5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                            />
                        </svg>
                        Live Demo
                    </a>
                )
            }
        </div>

        {
            project.metrics && (
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
                    {project.metrics.map((metric) => (
                        <div class="glass-panel p-6 text-center">
                            <div class="text-3xl font-bold text-[var(--color-primary)] mb-2">
                                {metric.value}
                            </div>
                            <div class="text-sm text-[var(--color-text-muted)]">
                                {metric.label}
                            </div>
                        </div>
                    ))}
                </div>
            )
        }
    </section>

    <!-- Project Details -->
    <section class="container mb-24">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-12">
                <!-- Problem -->
                <div>
                    <h2
                        class="text-3xl mb-6 pl-4 border-l-4 border-[var(--color-primary)]"
                    >
                        The Problem
                    </h2>
                    <p
                        class="text-[var(--color-text-muted)] text-lg leading-relaxed"
                    >
                        {project.problem}
                    </p>
                </div>

                <!-- Solution -->
                <div>
                    <h2
                        class="text-3xl mb-6 pl-4 border-l-4 border-[var(--color-primary)]"
                    >
                        The Solution
                    </h2>
                    <p
                        class="text-[var(--color-text-muted)] text-lg leading-relaxed"
                    >
                        {project.solution}
                    </p>
                </div>

                <!-- Key Features -->
                <div>
                    <h2
                        class="text-3xl mb-6 pl-4 border-l-4 border-[var(--color-primary)]"
                    >
                        Key Features
                    </h2>
                    <ul class="space-y-3">
                        {
                            project.features.map((feature) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-6 h-6 text-[var(--color-primary)] flex-shrink-0 mt-0.5"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="m4.5 12.75 6 6 9-13.5"
                                        />
                                    </svg>
                                    <span class="text-[var(--color-text-muted)]">
                                        {feature}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Challenges -->
                <div>
                    <h2
                        class="text-3xl mb-6 pl-4 border-l-4 border-[var(--color-primary)]"
                    >
                        Challenges & Solutions
                    </h2>
                    <ul class="space-y-3">
                        {
                            project.challenges.map((challenge) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-6 h-6 text-[var(--color-secondary)] flex-shrink-0 mt-0.5"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"
                                        />
                                    </svg>
                                    <span class="text-[var(--color-text-muted)]">
                                        {challenge}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Results -->
                <div>
                    <h2
                        class="text-3xl mb-6 pl-4 border-l-4 border-[var(--color-primary)]"
                    >
                        Results & Impact
                    </h2>
                    <ul class="space-y-3">
                        {
                            project.results.map((result) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        class="w-6 h-6 text-[var(--color-primary)] flex-shrink-0 mt-0.5"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="M2.25 18 9 11.25l4.306 4.306a11.95 11.95 0 0 1 5.814-5.518l2.74-1.22m0 0-5.94-2.281m5.94 2.28-2.28 5.941"
                                        />
                                    </svg>
                                    <span class="text-[var(--color-text-muted)]">
                                        {result}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-8">
                <!-- Project Info -->
                <div class="glass-panel p-8">
                    <h3 class="text-xl font-bold mb-6">Project Info</h3>
                    <div class="space-y-4">
                        <div>
                            <span
                                class="block text-sm text-[var(--color-text-muted)] mb-1"
                                >Role</span
                            >
                            <span class="text-[var(--color-text)]"
                                >{project.role}</span
                            >
                        </div>
                        <div>
                            <span
                                class="block text-sm text-[var(--color-text-muted)] mb-1"
                                >Timeline</span
                            >
                            <span class="text-[var(--color-text)]"
                                >{project.timeline}</span
                            >
                        </div>
                    </div>
                </div>

                <!-- Technologies -->
                <div class="glass-panel p-8">
                    <h3 class="text-xl font-bold mb-6">Technologies</h3>

                    {
                        project.technologies.frontend && (
                            <div class="mb-6">
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    Frontend
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.frontend.map(
                                        (tech) => (
                                            <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                                {tech}
                                            </span>
                                        ),
                                    )}
                                </div>
                            </div>
                        )
                    }

                    {
                        project.technologies.backend && (
                            <div class="mb-6">
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    Backend
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.backend.map(
                                        (tech) => (
                                            <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                                {tech}
                                            </span>
                                        ),
                                    )}
                                </div>
                            </div>
                        )
                    }

                    {
                        project.technologies.mobile && (
                            <div class="mb-6">
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    Mobile
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.mobile.map((tech) => (
                                        <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }

                    {
                        project.technologies.database && (
                            <div class="mb-6">
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    Database
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.database.map(
                                        (tech) => (
                                            <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                                {tech}
                                            </span>
                                        ),
                                    )}
                                </div>
                            </div>
                        )
                    }

                    {
                        project.technologies.devops && (
                            <div class="mb-6">
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    DevOps
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.devops.map((tech) => (
                                        <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }

                    {
                        project.technologies.other && (
                            <div>
                                <h4 class="text-sm text-[var(--color-text-muted)] mb-3">
                                    Other
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    {project.technologies.other.map((tech) => (
                                        <span class="bg-[var(--color-bg-secondary)] px-3 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }
                </div>

                <!-- Tags -->
                <div class="glass-panel p-8">
                    <h3 class="text-xl font-bold mb-6">Tags</h3>
                    <div class="flex flex-wrap gap-2">
                        {
                            project.tags.map((tag) => (
                                <span class="bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] px-3 py-1 rounded-full text-xs text-white">
                                    {tag}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- More Projects -->
    <section class="container mb-24">
        <h2 class="text-3xl mb-8">More Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                projects
                    .filter((p) => p.slug !== slug)
                    .slice(0, 3)
                    .map((p) => (
                        <a
                            href={`/projects/${p.slug}`}
                            class="glass-panel p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:border-white/20 group"
                        >
                            <h3 class="text-xl mb-3 text-[var(--color-text)] font-bold">
                                {p.title}
                            </h3>
                            <p class="text-[var(--color-text-muted)] text-sm mb-4">
                                {p.shortDescription}
                            </p>
                            <div class="flex flex-wrap gap-2">
                                {p.tags.slice(0, 3).map((tag) => (
                                    <span class="bg-[var(--color-bg-secondary)] px-2 py-1 rounded-full text-xs text-[var(--color-text)] border border-[var(--color-border)]">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </a>
                    ))
            }
        </div>
    </section>
</Layout>
