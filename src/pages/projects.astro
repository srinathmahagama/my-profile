---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { projects } from "../data/projectData";
---

<Layout title="Projects | Srinath Mahagama">
    <section class="container py-16 text-center">
        <h1 class="text-5xl md:text-6xl mb-4">
            My <span class="gradient-text">Projects</span>
        </h1>
        <p class="text-xl text-[#a0a0a0] max-w-[800px] mx-auto">
            A collection of projects I've worked on, ranging from
            enterprise-scale platforms to innovative startups and IoT solutions.
        </p>
    </section>

    <section class="container mb-24">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <Card
                        title={project.title}
                        description={project.shortDescription}
                        tags={project.tags}
                        link={`/projects/${project.slug}`}
                        image={project.images.hero}
                    />
                ))
            }
        </div>
    </section>
</Layout>
