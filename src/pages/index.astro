---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Stats from "../components/Stats.astro";
import TechStack from "../components/TechStack.astro";
import { getFeaturedProjects } from "../data/projectData";

const featuredProjects = getFeaturedProjects();
---

<Layout title="Srinath Mahagama | Full Stack Developer">
	<Hero />

	<section class="container mb-32">
		<div
			class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 gap-4"
		>
			<h2 class="text-4xl md:text-5xl">
				Featured <span class="gradient-text">Projects</span>
			</h2>
			<a
				href="/projects"
				class="text-[var(--color-primary)] font-semibold transition-transform duration-200 hover:translate-x-1"
				>View All Projects &rarr;</a
			>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				featuredProjects.map((project) => (
					<Card
						title={project.title}
						description={project.shortDescription}
						tags={project.tags}
						link={`/projects/${project.slug}`}
					/>
				))
			}
		</div>
	</section>

	<Stats />

	<TechStack />

	<section class="container mb-24 text-center">
		<div
			class="glass-panel p-16 flex flex-col items-center gap-6 bg-gradient-to-br from-[rgba(112,0,255,0.1)] to-[rgba(0,240,255,0.05)]"
		>
			<h2 class="text-4xl md:text-5xl">Ready to start a project?</h2>
			<p class="text-[#a0a0a0] text-xl max-w-[600px]">
				Let's collaborate and build something amazing together.
			</p>
			<a href="/contact" class="btn btn-primary">Get in Touch</a>
		</div>
	</section>
</Layout>
