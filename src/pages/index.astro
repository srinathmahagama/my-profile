---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Stats from "../components/Stats.astro";
import TechStack from "../components/TechStack.astro";
import { getFeaturedProjects } from "../data/projectData";

const featuredProjects = getFeaturedProjects();
---

<Layout title="Srinath Mahagama | Full Stack Developer">
	<Hero />

	<Stats />

	<TechStack />

	<section class="container mb-32">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl mb-4">
				Featured <span class="gradient-text">Projects</span>
			</h2>
			<p
				class="text-lg text-[var(--color-text-muted)] max-w-[600px] mx-auto"
			>
				A selection of my recent work. Explore innovative solutions
				built with modern technologies.
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
			{
				featuredProjects.slice(0, 3).map((project) => (
					<a
						href={`/projects/${project.slug}`}
						class="group glass-panel p-6 transition-all duration-300 hover:-translate-y-2 hover:border-[var(--color-primary)] hover:shadow-lg hover:shadow-[var(--color-primary)]/20"
					>
						<div class="flex items-start justify-between mb-4">
							<div class="p-3 rounded-lg bg-gradient-to-br from-[var(--color-primary)]/10 to-[var(--color-secondary)]/10 border border-[var(--color-border)]">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="w-6 h-6 text-[var(--color-primary)]"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
									/>
								</svg>
							</div>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="2"
								stroke="currentColor"
								class="w-5 h-5 text-[var(--color-text-muted)] group-hover:text-[var(--color-primary)] group-hover:translate-x-1 group-hover:-translate-y-1 transition-all"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
								/>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-primary)] transition-colors">
							{project.title}
						</h3>
						<p class="text-[var(--color-text-muted)] text-sm mb-4 line-clamp-2">
							{project.shortDescription}
						</p>
						<div class="flex flex-wrap gap-2">
							{project.tags.slice(0, 3).map((tag) => (
								<span class="text-xs px-2 py-1 rounded-full bg-[var(--color-bg-secondary)] text-[var(--color-text-muted)] border border-[var(--color-border)]">
									{tag}
								</span>
							))}
						</div>
					</a>
				))
			}
		</div>

		<div class="text-center">
			<a
				href="/projects"
				class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-[var(--color-primary)]/30"
			>
				<span>View All Projects</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					class="w-5 h-5"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
				</svg>
			</a>
		</div>
	</section>

	<section class="container mb-24 text-center">
		<div
			class="glass-panel p-16 flex flex-col items-center gap-6 bg-gradient-to-br from-[rgba(112,0,255,0.1)] to-[rgba(0,240,255,0.05)]"
		>
			<h2 class="text-4xl md:text-5xl">
				Looking for a Software Engineer?
			</h2>
			<p class="text-[var(--color-text-muted)] text-xl max-w-[700px]">
				I'm actively seeking new opportunities to contribute to
				innovative teams. Let's discuss how my expertise in full-stack
				development can add value to your organization.
			</p>
			<div class="flex flex-wrap gap-4 justify-center">
				<a href="/contact" class="btn btn-primary">Let's Talk</a>
				<a
					href="/resume.pdf"
					class="btn btn-outline"
					target="_blank"
					rel="noopener noreferrer"
				>
					View Resume
				</a>
			</div>
		</div>
	</section>
</Layout>
