---
interface Tech {
    name: string;
    icon?: string;
}

interface TechCategory {
    name: string;
    technologies: Tech[];
    color: string;
}

const techStack: TechCategory[] = [
    {
        name: "Frontend",
        technologies: [
            { name: "React", icon: "react" },
            { name: "React Native", icon: "react" },
            { name: "Angular", icon: "angular" },
            { name: "Next.js", icon: "nextjs" },
            { name: "TypeScript", icon: "ts" },
            { name: "JavaScript", icon: "js" },
            { name: "HTML5", icon: "html" },
            { name: "CSS3", icon: "css" },
            { name: "Tailwind CSS", icon: "tailwind" },
            { name: "Redux", icon: "redux" },
            { name: "Zustand" },
            { name: "Expo" },
            { name: "Flutter", icon: "flutter" },
            { name: "Astro", icon: "astro" },
        ],
        color: "from-blue-500 to-cyan-500",
    },
    {
        name: "Backend",
        technologies: [
            { name: "Node.js", icon: "nodejs" },
            { name: "Express.js", icon: "express" },
            { name: "Bun", icon: "bun" },
            { name: "NestJS", icon: "nestjs" },
            { name: "Spring Boot", icon: "spring" },
            { name: "GraphQL", icon: "graphql" },
            { name: "tRPC" },
            { name: "REST API" },
            { name: "fastAPI", icon: "fastapi" },
            { name: "Microservices" },
            { name: "WebSockets" },
            { name: "Java", icon: "java" },
            { name: "python", icon: "py" },
        ],
        color: "from-green-500 to-emerald-500",
    },
    {
        name: "Database & ORM",
        technologies: [
            { name: "PostgreSQL", icon: "postgres" },
            { name: "MySQL", icon: "mysql" },
            { name: "MongoDB", icon: "mongodb" },
            { name: "Prisma", icon: "prisma" },
            { name: "Neon DB" },
            { name: "Redis", icon: "redis" },
            { name: "TypeORM" },
        ],
        color: "from-purple-500 to-pink-500",
    },
    {
        name: "DevOps & Cloud",
        technologies: [
            { name: "AWS", icon: "aws" },
            { name: "GCP", icon: "gcp" },
            { name: "Docker", icon: "docker" },
            { name: "Kubernetes", icon: "kubernetes" },
            { name: "CI/CD" },
            { name: "GitHub Actions", icon: "githubactions" },
            { name: "Firebase", icon: "firebase" },
            { name: "Vercel", icon: "vercel" },
        ],
        color: "from-orange-500 to-red-500",
    },
    {
        name: "Tools & Practices",
        technologies: [
            { name: "Git", icon: "git" },
            { name: "GitHub", icon: "github" },
            { name: "VS Code", icon: "vscode" },
            { name: "IntelliJ IDEA", icon: "idea" },
            { name: "Cursor" },
            { name: "Antigravity" },
            { name: "Agile" },
            { name: "Scrum" },
            { name: "Jest", icon: "jest" },
            { name: "Vitest", icon: "vitest" },
            { name: "Webpack", icon: "webpack" },
            { name: "Vite", icon: "vite" },
            { name: "Turborepo" },
            { name: "Monorepo" },
        ],
        color: "from-yellow-500 to-amber-500",
    },
    {
        name: "AI & Data",
        technologies: [
            { name: "LLMs" },
            { name: "Transformers" },
            { name: "Model Context Protocol (MCP)" },
            { name: "Machine Learning" },
            { name: "NLP" },
            { name: "Big Data" },
            { name: "Hadoop" },
        ],
        color: "from-indigo-500 to-violet-500",
    },
];
---

<section class="container mb-32">
    <h2 class="text-4xl md:text-5xl mb-12 text-center">
        Tech <span class="gradient-text">Stack</span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
            techStack.map((category) => (
                <div class="glass-panel p-8 transition-all duration-300 hover:-translate-y-1 hover:border-white/20">
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class={`w-1 h-8 bg-gradient-to-b ${category.color} rounded-full`}
                        />
                        <h3
                            class="text-2xl font-bold"
                            style="color: var(--color-text);"
                        >
                            {category.name}
                        </h3>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        {category.technologies.map((tech) => (
                            <span
                                class="flex items-center gap-2 px-4 py-2 rounded-full font-medium transition-all duration-300 glass-panel hover:-translate-y-0.5 hover:border-[var(--color-primary)] group"
                                style="color: var(--color-text);"
                            >
                                {tech.icon && (
                                    <img
                                        src={`https://skillicons.dev/icons?i=${tech.icon}`}
                                        alt={`${tech.name} icon`}
                                        class="w-5 h-5 object-contain"
                                        loading="lazy"
                                    />
                                )}
                                <span>{tech.name}</span>
                            </span>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</section>
