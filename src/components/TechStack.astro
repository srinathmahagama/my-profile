---
interface TechCategory {
    name: string;
    technologies: string[];
    color: string;
}

const techStack: TechCategory[] = [
    {
        name: "Frontend",
        technologies: [
            "React",
            "React Native",
            "Angular",
            "Next.js",
            "TypeScript",
            "JavaScript",
            "HTML5",
            "CSS3",
            "Tailwind CSS",
            "Redux",
            "Zustand",
            "Expo",
            "Flutter",
            "Astro",
        ],
        color: "from-blue-500 to-cyan-500",
    },
    {
        name: "Backend",
        technologies: [
            "Node.js",
            "Express.js",
            "Bun",
            "NestJS",
            "Spring Boot",
            "GraphQL",
            "tRPC",
            "REST API",
            "fastAPI",
            "Microservices",
            "WebSockets",
            "Java",
            "python",
        ],
        color: "from-green-500 to-emerald-500",
    },
    {
        name: "Database & ORM",
        technologies: [
            "PostgreSQL",
            "MySQL",
            "MongoDB",
            "Prisma",
            "Neon DB",
            "Redis",
            "TypeORM",
        ],
        color: "from-purple-500 to-pink-500",
    },
    {
        name: "DevOps & Cloud",
        technologies: [
            "AWS",
            "GCP",
            "Docker",
            "Kubernetes",
            "CI/CD",
            "GitHub Actions",
            "Firebase",
            "Vercel",
        ],
        color: "from-orange-500 to-red-500",
    },
    {
        name: "Tools & Practices",
        technologies: [
            "Git",
            "GitHub",
            "VS Code",
            "IntelliJ IDEA",
            "Cursor",
            "Antigravity",
            "Agile",
            "Scrum",
            "Jest",
            "Vitest",
            "Webpack",
            "Vite",
            "Turborepo",
            "Monorepo",
        ],
        color: "from-yellow-500 to-amber-500",
    },
    {
        name: "AI & Data",
        technologies: [
            "LLMs",
            "Transformers",
            "Model Context Protocol (MCP)",
            "Machine Learning",
            "NLP",
            "Big Data",
            "Hadoop",
        ],
        color: "from-indigo-500 to-violet-500",
    },
];
---

<section class="container mb-32">
    <h2 class="text-4xl md:text-5xl mb-12 text-center">
        Tech <span class="gradient-text">Stack</span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
            techStack.map((category) => (
                <div class="glass-panel p-8 transition-all duration-300 hover:-translate-y-1 hover:border-white/20">
                    <div class="flex items-center gap-3 mb-6">
                        <div
                            class={`w-1 h-8 bg-gradient-to-b ${category.color} rounded-full`}
                        />
                        <h3
                            class="text-2xl font-bold"
                            style="color: var(--color-text);"
                        >
                            {category.name}
                        </h3>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        {category.technologies.map((tech) => (
                            <span
                                class="px-4 py-2 rounded-full font-medium transition-all duration-300 glass-panel hover:-translate-y-0.5 hover:border-[var(--color-primary)]"
                                style="color: var(--color-text);"
                            >
                                {tech}
                            </span>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</section>
