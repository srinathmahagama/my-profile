<section class="min-h-[90vh] flex items-center relative overflow-hidden">
    <div
        class="container grid grid-cols-1 md:grid-cols-2 gap-16 items-center z-10 pt-16 md:pt-0"
    >
        <div class="animate-[fadeIn_0.8s_ease_forwards]">
            <span
                class="text-xl text-[var(--color-primary)] font-semibold mb-2 block"
                >Hello, I'm</span
            >
            <h1 class="text-5xl md:text-7xl mb-2 leading-[1.1]">
                Srinath <span class="gradient-text">Mahagama</span>
            </h1>
            <h2 class="text-3xl text-[#a0a0a0] mb-6 font-normal">
                Full Stack Developer
            </h2>
            <p class="text-lg text-[#a0a0a0] mb-6 max-w-[500px]">
                Building scalable, high-performance web applications with modern
                technologies. Specializing in React, Node.js, and Cloud
                Architecture.
            </p>

            <div class="flex items-center gap-4 mb-10">
                <span class="text-sm text-[#a0a0a0]">Connect with me:</span>
                <a
                    href="https://github.com/yourusername"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-2 rounded-full border hover:border-[var(--color-primary)] transition-all duration-300"
                    style="border-color: var(--color-border); background: transparent;"
                    aria-label="GitHub"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        style="color: var(--color-text);"
                    >
                        <path
                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                        ></path>
                    </svg>
                </a>
                <a
                    href="https://www.linkedin.com/in/srinath-mahagama-78239b186"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="p-2 rounded-full border border-white/20 hover:border-[var(--color-primary)] hover:bg-white/5 transition-all duration-300"
                    aria-label="LinkedIn"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="text-white"
                    >
                        <path
                            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                        ></path>
                    </svg>
                </a>
                <span
                    class="ml-4 px-3 py-1 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-xs font-medium"
                >
                    Available for opportunities
                </span>
            </div>

            <div class="flex gap-4 justify-center md:justify-start">
                <a href="/projects" class="btn btn-primary">View Work</a>
                <a href="/contact" class="btn btn-outline">Contact Me</a>
                <a
                    href="/resume.pdf"
                    class="btn btn-outline border-white/20 hover:bg-white hover:text-[var(--color-bg)]"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <span class="mr-2">Download CV</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5 inline-block"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
        <div
            class="relative flex justify-center items-center animate-[fadeIn_0.8s_ease_forwards] delay-200 mt-8 md:mt-0"
        >
            <div
                class="absolute w-[400px] h-[400px] bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-secondary)] rounded-full blur-[100px] opacity-20 -z-10"
            >
            </div>
            <!-- Placeholder for 3D element or profile image -->
            <div
                class="glass-panel p-8 w-full max-w-[400px] -rotate-3 transition-transform duration-500 hover:rotate-0 hover:scale-[1.02]"
            >
                <div class="font-mono text-white leading-relaxed">
                    <span class="text-[#ff79c6]">const</span>
                    <span class="text-[#50fa7b]">developer</span> = {`{`}
                    <br />&nbsp;&nbsp;<span class="text-[#8be9fd]">name</span>: <span
                        class="text-[#f1fa8c]">"Srinath"</span
                    >,
                    <br />&nbsp;&nbsp;<span class="text-[#8be9fd]">role</span>: <span
                        class="text-[#f1fa8c]">"Full Stack Dev"</span
                    >,
                    <br />&nbsp;&nbsp;<span class="text-[#8be9fd]"
                        >location</span
                    >: <span class="text-[#f1fa8c]">"Australia"</span>
                    <br />{`}`};
                </div>
            </div>
        </div>
    </div>
</section>
